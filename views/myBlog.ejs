<%- include("partials/header") -%>

<style>
  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }
  }
</style>
<!-- Custom styles for this template -->
<link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
<!-- Custom styles for this template -->

<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <a href="/products" class="btn btn-dark ml-sm-3 ml-3 btn-sm" name="button">Donate<a>
          <a href="/register" class="btn btn-outline-dark mr-sm-3 mr-3 btn-sm">Hire me</a>
    </div>
  </header>
  <% blogPost.forEach(function(item,index){ %>
  <% if(index == (blogPost.length)-1){ %>
  <div class="jumbotron p-4 p-md-5 text-white rounded bgdark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 " id="day"><%= item.title %> </h1>
      <p class="lead my-3" id="lad"> <%- item.content.substr(0,200)  %> </p>
      <p class="mb-0"><a href="/myBlog/message/<%= item._id %>" class="text-white">Continue reading...</a></p>
    </div>
  </div>
  <% }}); %>
  <div class="row mb-2 ">
    <% blogPost.forEach(function(item,index){ %>
    <% if(index >=(blogPost.length)-4 && index != (blogPost.length)-1 && index != (blogPost.length)-3){ %>
    <div class="col-md-6">
      <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class=" col p-4 d-flex flex-column position-static combak">
          <strong class="d-inline-block mb-2 text-primary"><%- item.typeofBlog %></strong>
          <h3 class="mb-0"><%- item.title %></h3>
          <div class="mb-1 text-muted"><%- item.time %></div>
          <p class="card-text mb-auto"><%- item.content.substr(0,100) %></p>
          <a href="/myBlog/message/<%- item._id %>" class="stretched-link">Continue reading</a>
        </div>

        <div class="col-auto d-none d-lg-block">
          <img src=<%= item.imageurl %> alt="" class="bd-placeholder-img" width="200" height="250">
        </div>
      </div>
    </div>
    <% }}); %>
  </div>
</div>
<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-4 mb-4 font-italic border-bottom">
        From the Dometech
      </h3>
      <% blogPost.forEach(function(item){%>
      <div class="blog-post">
        <h2 class="blog-post-title" id=<%= item._id %>><%- item.title %></h2>
        <p class="blog-post-meta"><%- item.time %>&nbsp; by &nbsp;<%- item.authorName %></p>
        <div class="domparser">
          <p>
            <%- item.content.substr(0,500) %>
            <small><a href="/myBlog/message/<%= item._id %>">Read more...</a></small>
            <small> views <%= item.views %> </small>
          </p>
        </div>

        <small class="text-danger" style="display:block;">
          If this was helpful, you can support the developer by donating.
          <a href="/products" class="btn btn-danger ml-sm-3 ml-3 btn-sm" name="button">Donate<a>&nbsp;<small>OR</small>&nbsp;
              <a href="/register" class="btn btn-outline-dark mr-sm-3 mr-3 btn-sm">Hire me</a>
        </small>
      </div>


      <hr style="background-color:#e9ecef;">
      <!-- /.blog-post -->
      <% }); %>
    </div>
    <!-- /.blog-sidebar -->
    <aside class="col-md-4 blog-sidebar">
      <div class="p-4 mb-3 bg-light rounded">
        <h4 class="font-italic">About</h4>
        <p class="mb-0">Our blog provides you with good <em>quality information</em>. We hope to enlighten you the more. </p>
      </div>

      <div class="p-4">
        <h4 class="font-italic">Archives</h4>
        <ol class="list-unstyled mb-0">
          <li><a href="#">March 2021</a></li>
          <li><a href="#">February 2021</a></li>
          <li><a href="#">January 2021</a></li>
          <li><a href="#">December 2020</a></li>
          <li><a href="#">November 2021</a></li>
          <li><a href="#">October 2021</a></li>
          <li><a href="#">September 2021</a></li>
          <li><a href="#">August 2021</a></li>
          <li><a href="#">July 2021</a></li>
          <li><a href="#">June 2021</a></li>
          <li><a href="#">May 2021</a></li>
          <li><a href="#">April 2021</a></li>
        </ol>
      </div>

    </aside>
  </div><!-- /.row -->

</main><!-- /.container -->

<footer class="blog-footer">
  <p>  <a href="#">Back to top</a>   &nbsp</p>

</footer>

<%- include("partials/footer") -%>
